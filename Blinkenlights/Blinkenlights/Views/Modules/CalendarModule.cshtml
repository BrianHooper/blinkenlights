@using Blinkenlights.Models.ViewModels.Calendar;
@using Blinkenlights.Utilities;
@model CalendarViewModel

@await Html.PartialAsync("ModuleStatus", Model)

<div id="calendar-events">
	@if (Model?.Events?.Any() == true)
	{
		foreach(var calEvent in Model.Events) {
			<div class="calendar-row">
				<div class="calendar-name">@calEvent.Name</div>
				<div class="calendar-date">@calEvent.Date</div>
			</div>
		}
	}
</div>

<script type="module" src="~/ts-dist/CalendarModule.js"></script>