@using Blinkenlights.Models.ViewModels.Slideshow;
@model SlideshowViewModel

<partial name="ModuleStatus" model="@Model" />

<link rel="stylesheet" href="~/css/slideshow.css" />

<div id="slideshow-root">
	@if (Model.Frames != null)
	{
		@foreach (var frame in Model.Frames)
		{
			<div class="frame">
				@if (!string.IsNullOrWhiteSpace(frame.Source))
				{
					var url = string.IsNullOrWhiteSpace(frame.Url) ? frame.Source : frame.Source;
					<img src="@frame.Source" alt="@frame.Subtitle">
					<a class="frame-url" href="@url" target="_blank"></a>
				}
			</div>
		}
	}
</div>

<script type="module" src="~/ts-dist/SlideshowModule.js"></script>