@using Blinkenlights.Models.ViewModels.IssTracker;
@model IssTrackerViewModel

@if (!string.IsNullOrWhiteSpace(Model?.Status))
{
	<div id="iss-status" data-api-status="@Model.Status" hidden>
	</div>
}

@if (!string.IsNullOrWhiteSpace(Model?.ImagePath))
{
	<div class="iss-content">
		<img src="@Model.ImagePath" />
	</div>
	<div class="iss-update">
		@Model.Report
	</div>

}

<link rel="stylesheet" href="~/css/iss.css" />
<script type="module" src="~/ts-dist/IssTrackerModule.js"></script>